#
# ldap.conf generated for <%= node['hostname'] %>
#
# Managed by Chef
#

host ldap://ldap.psa-team1.informatik.tu-muenchen.de
port 389
bind_policy soft
nss_reconnect_tries 2
ldap_version 3

binddn cn=admin,<%= @basedn %>
bindpw sidolin

# Where to find data
base <%= @basedn %>
scope sub
nss_base_passwd ou=Users,<%= @basedn %>
nss_base_shadow ou=Users,<%= @basedn %>
nss_base_group ou=Groups,<%= @basedn %>
nss_base_automount ou=automount,<%= @basedn %>

# TLS Options
ssl start_tls
tls_checkpeer yes

